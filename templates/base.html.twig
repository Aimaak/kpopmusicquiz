<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}K-Pop Music Quiz{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="has-background-dark has-text-centered has-text-light">
		<nav class="pt-3">
      <div id="nav-logo-section" class="nav-section">

      </div>
      <div id="nav-title-section" class="nav-section">
        <h1 class="title is-2 has-text-light">K-Pop Music Quiz</h1>
      </div>
      <div id="nav-link-section" class="nav-section">
        <a class="button is-primary is-justify-content-end" href="{{ path('app_home') }}">Play</a>
        <a class="button is-primary is-justify-content-end" href="{{ path('app_score') }}">Scoreboard</a>
      </div>
		</nav>
		<section class="section">
			<div class="container">
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="notification is-{{ label }}">
              <button class="delete"></button>
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}
				{% block body %}{% endblock %}
			</div>
		</section>
		<footer class="footer has-background-dark is-fixed-bottom">
			<div class="content has-text-centered">
				<p>
					Made with &hearts; by <a href="https://twitter.com/Aimaak_">Aimak</a>
				</p>
			</div>
		</footer>
	</body>
</html>
